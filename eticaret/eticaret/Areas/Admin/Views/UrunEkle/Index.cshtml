@model eticaret.Models.Product
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/PanelLayout.cshtml";
}

<link rel="stylesheet" href="~/admin/css/UrunSatis.css">

<div class="product-form-container">
    <h2 class="form-header">Yeni Ürün Ekle</h2>
    <form asp-area="Admin" asp-controller="UrunEkle" asp-action="Index" enctype="multipart/form-data" method="post">
        <div class="form-group">
            @Html.LabelFor(model => model.name, "Ürün Adı")
            @Html.TextBoxFor(model => model.name, new { @class = "form-control", placeholder = "Ürün Adı Girin", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.price, "Fiyat")
            @Html.TextBoxFor(model => model.price, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Fiyat Girin", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.description, "Açıklama")
            @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = 3, placeholder = "Ürün açıklamasını girin" })
        </div>

        <div class="form-group">
            <label for="img">Ürün Görseli</label>
            <input type="file" class="form-control" id="img" name="FotoFile" />
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.discount, "İndirim (%)")
            @Html.TextBoxFor(model => model.discount, new { @class = "form-control", type = "number", placeholder = "İndirim oranı girin" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.label, "Etiket")
            @Html.TextBoxFor(model => model.label, new { @class = "form-control", placeholder = "Etiket (Örn: Yeni, İndirim)" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cinsiyet, "Cinsiyet")
            @Html.DropDownListFor(
                     model => model.cinsiyet,
                     new SelectList(new[]
                     {
            new { Value = "", Text = "Yok" },
            new { Value = "false", Text = "Kadın" },
            new { Value = "true", Text = "Erkek" }
            }, "Value", "Text"),
                     new { @class = "form-control" }
                     )
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cocuk, "Çocuk Ürünü mü?")
            @Html.DropDownListFor(
                     model => model.cocuk,
                     new SelectList(new[]
                     {
            new { Value = "", Text = "Yok" },
            new { Value = "false", Text = "Hayır" },
            new { Value = "true", Text = "Evet" }
            }, "Value", "Text"),
                     new { @class = "form-control" }
                     )
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.alan_adi, "Alan Adı")
            @Html.TextBoxFor(model => model.alan_adi, new { @class = "form-control", placeholder = "Alan adı (isteğe bağlı)" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.category_id, "Kategori")
            @Html.DropDownListFor(model => model.category_id, new SelectList(new[] { new { Value = 1, Text = "Electronics" }, new { Value = 2, Text = "Fashion" }, new { Value = 3, Text = "Sporting Goods" }, new { Value = 4, Text = "Home & Garden" } }, "Value", "Text"), new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary submit-button">Ürünü Ekle</button>
    </form>
</div>

<!-- SweetAlert Kütüphanesi -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // TempData'dan SweetAlert mesajını al
        var message = '@TempData["Product_Urun_Basarıyla_Eklendi"]';

        // Eğer mesaj varsa, SweetAlert'i göster
        if (message) {
            Swal.fire({
                icon: 'success',
                title: 'Başarıyla Eklendi',
                text: 'Ürün başarıyla eklendi!',
                timer: 3000, // 3 saniye sonra otomatik kapanır
                showConfirmButton: false
            });
        }
    });
</script>



