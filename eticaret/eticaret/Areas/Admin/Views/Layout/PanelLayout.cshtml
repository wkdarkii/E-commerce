


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/darkpan-1.0.0/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/darkpan-1.0.0/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/darkpan-1.0.0/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/darkpan-1.0.0/css/bootstrap.min.css" rel="stylesheet">

    @* Modal Css *@
    <link href="~/admin/css/Modal.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/darkpan-1.0.0/css/style.css" rel="stylesheet">
    <link rel="icon" href="~/admin/icons/web-design.png" type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.0/sweetalert2.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.0/sweetalert2.all.min.js"></script>


    <style>

        .bisi{
            padding-left:50px;
        }
    </style>
</head>
<body>
    <!-- Content Start -->
    <div class="content">

     <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->

        @* yan kısmı acan kapatan *@
            <a href="#" class="sidebar-toggler flex-shrink-0 p-4">
                <i class="fa fa-bars"></i>
            </a>






        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a href="index.html" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>DarkPan</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="~/darkpan-1.0.0/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Jhon Doe</h6>
                        <span>Admin</span>
                    </div>
                </div>






                <div class="navbar-nav w-100">
                        <a href="/Admin/Account/Panel" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Panel" ? "active" : "")">
                            <i class="fa fa-tachometer-alt me-2"></i>İlanlar
                        </a>

                        <a href="/Admin/Siparisler/Siparis" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Siparisler" && ViewContext.RouteData.Values["action"].ToString() == "Siparis" ? "active" : "")">
                            <i class="fa fa-chart-bar me-2"></i>Siparişler
                        </a>

                        <a href="/Admin/SatisBilgi/Satis" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "SatisBilgi" && ViewContext.RouteData.Values["action"].ToString() == "Satis" ? "active" : "")">
                            <i class="fa fa-chart-bar me-2"></i>Satışlar
                        </a>

                       

                        <a href="/Admin/UrunEkle/Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "UrunEkle" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                            <i class="fa fa-chart-bar me-2"></i>Ürün Ekle
                        </a>

                        <a href="/Admin/ProductEdit/Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "ProductEdit" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                            <i class="fa fa-chart-bar me-2"></i>Ürün Düzenle
                        </a>

                        <a href="/Admin/KullaniciSatis/Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "KullaniciSatis" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                            <i class="far fa-file-alt me-2"></i>Kullanıcı Satışları
                        </a>

                        <a href="/Admin/KullaniciYorum/Index" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "KullaniciYorum" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                            <i class="far fa-file-alt me-2"></i>Kullanıcı Yorumlar
                        </a>
                
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Pages</a>
                        <div class="dropdown-menu bg-transparent border-0">
                                <a href="@Url.Action("Index", "Main", new { area = "" })" class="dropdown-item">Ana Sayfa</a>

                                <a href="@Url.Action("Register", "Account", new { area = "Admin" })" class="dropdown-item">Kayıt Ol</a>
                             
                            <a href="/Admin/Error/Index" class="dropdown-item">404 Error</a>

                                <a href="/Admin/KategoriEkle/Index" class="dropdown-item">
                                  Kategori ekle
                                </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
    </div>
        @RenderBody()

    <!-- Footer Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-secondary rounded-top p-4">
            <div class="row">
                <div class="col-12 col-sm-6 text-center text-sm-start">
                    &copy; <a href="#">Your Site Name</a>, All Right Reserved.
                </div>
                <div class="col-12 col-sm-6 text-center text-sm-end">
                    <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                    Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                    <br>Distributed By: <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    </div>


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/darkpan-1.0.0/lib/chart/chart.min.js"></script>
    <script src="~/darkpan-1.0.0/lib/easing/easing.min.js"></script>
    <script src="~/darkpan-1.0.0/lib/waypoints/waypoints.min.js"></script>
    <script src="~/darkpan-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/darkpan-1.0.0/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/darkpan-1.0.0/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/darkpan-1.0.0/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/darkpan-1.0.0/js/main.js"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                title: 'Başarı!',
                text: 'Ürün başarıyla güncellendi!',
                icon: 'success',
                timer: 2000, // 2 saniye sonra otomatik kapanır
                showCancelButton: true, // Çarpı işareti (kapama) gösterir
                confirmButtonText: 'Tamam',
                cancelButtonText: 'Kapat',
                timerProgressBar: true
            });
        </script>
    }

  
</body>



</html>